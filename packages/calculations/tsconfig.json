{
  "compilerOptions": {
    "declarationMap": true, 
    "module": "ESNext", 
    "target": "ESNext",
    "lib": ["ESNext", "DOM"], 
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./",
  },
  "exclude": ["node_modules", "dist"]
}
